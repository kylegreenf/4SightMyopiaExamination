<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/relativeLayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <Button
        android:id="@+id/startExamBtm"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="92dp"
        android:layout_marginTop="116dp"
        android:layout_marginEnd="25dp"
        android:text="@string/startTestWithoutInstructions"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/intstructionsBtn"
        app:layout_constraintTop_toBottomOf="@+id/tumblingButton" />

    <Button
        android:id="@+id/intstructionsBtn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="25dp"
        android:layout_marginTop="116dp"
        android:text="@string/startTestWithInstructions"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/snellenButton" />

    <TextView
        android:id="@+id/testTypeTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="75dp"
        android:text="@string/testType"
        android:textSize="20sp"
        app:layout_constraintTop_toTopOf="parent"
        tools:layout_editor_absoluteX="30dp" />

    <Button
        android:id="@+id/snellenButton"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:layout_marginEnd="120dp"
        android:text="@string/snellenButton"
        app:layout_constraintEnd_toStartOf="@+id/tumblingButton"
        app:layout_constraintTop_toBottomOf="@+id/snellenImage" />

    <ImageView
        android:id="@+id/snellenImage"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="48dp"
        android:layout_marginTop="60dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/testTypeTextView"
        app:srcCompat="@mipmap/snellen_icon" />

    <Button
        android:id="@+id/tumblingButton"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:text="@string/floatingEButton"
        app:layout_constraintTop_toBottomOf="@+id/tumblingImage"
        tools:layout_editor_absoluteX="251dp" />

    <ImageView
        android:id="@+id/tumblingImage"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="60dp"
        android:layout_marginEnd="48dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/testTypeTextView"
        app:srcCompat="@mipmap/tumbling_icon" />


</androidx.constraintlayout.widget.ConstraintLayout>